<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :excerpt %>
  <%= f.text_field :excerpt%>
  <br />
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients%>
  <br />
  <%= f.label :directions %>
  <%= f.text_field :directions%>
  <br />
  <%= f.submit %>
<% end %>