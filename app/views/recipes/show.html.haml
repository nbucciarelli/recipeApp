%h1= @recipe.title
%p
  Course
%p
  - @course = @recipe.courses
  - @course.each do |type|
    %ul
      %li= type.name
%p
  Cuisine
%p
  - @cuisine = @recipe.cuisines
  - @cuisine.each do |type|
    %ul
      %li= type.name
%p
  Ingredients
%p
  %ul
    %li= @recipe.ingredients
%p
  Directions
%p
  %ul
    %li= @recipe.directions
%p
  Date Published
%p
  %ul
    %li= @recipe.published_at
%br
%hr
%h2
  = 'Comments for ' + @recipe.title

- @comments = @recipe.comments.all
- if !@comments.nil?
  - @comments.each do |comment|
    %br
    = comment.body
    %br
    %span{:style => 'font-size: 10px;'}
      = 'Posted ' + time_ago_in_words(comment.created_at) + ' ago by ' + comment.name + ' (' + comment.email + ')'
- else
  = puts 'Sorry, no dice.'

%h3 Post a comment
= render '/comments/new_comment_form'
%br
/ = link_to 'Back', recipes_path
= link_to 'Back', :back