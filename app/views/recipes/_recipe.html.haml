- @recipes.each do |recipe|
  %p
    = recipe.title
    - if recipe.owned_by? current_user
      %span{:style => 'float: right;'}
        = link_to 'View', recipe_path(recipe)
        |
        = link_to 'Edit', edit_recipe_path(recipe)
        |
        = link_to 'Delete', recipe, :method => 'delete', :confirm => 'Are you sure?'
  %hr