<% @recipes.each do |recipe| %>
  <p>
    <%= recipe.title %>
    <span style="float: right;">
      <%= link_to 'View', recipe_path(recipe) %>
      |
      <%= link_to 'Edit', edit_recipe_path(recipe) %>
      |
      <%= link_to 'Delete', recipe, :method => 'delete', :confirm => 'Are you sure?'%>
    </span>
  </p>
  <hr />
<% end %>